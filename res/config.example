#!/usr/bin/env perl
# -----------------------------------------------------------------------------
# NSI site configuration file
# -----------------------------------------------------------------------------
# Server information                                                server,host
# -----------------------------------------------------------------------------
$ENV{'PATH'}  = "$ENV{'PATH'}:/bin:/usr/bin:/usr/local/bin";
$ENV{'PATH'}  = "$ENV{'PATH'}:/sbin:/usr/sbin:/usr/local/sbin";
$ENV{'PATH'}  = "$ENV{'PATH'}:/usr/pkg/bin:/usr/pkg/sbin";
$HOSTNAME     = `hostname -s`;
$CURRENT_TIME = `date`;
# -----------------------------------------------------------------------------
# Site information					   	      site,info
# -----------------------------------------------------------------------------
$ORGANIZATION = "NFINIT labs";
$SITE_NAME    = "NSI Development Repository";
$HOME_PAGE_TITLE = "Home";  # Title for root/home page (also used in navigation)
$API_ENABLED  = 1;
# -----------------------------------------------------------------------------
# Display preferences							display
# -----------------------------------------------------------------------------
$DYNAMIC_LANDING =  0; # Generate a dynamic landing (home) page if no content
$NAVIGATION_MENU =  1; # Display breadcrumb navigation menu
$ROOT_NAVIGATION =  0; # Display navigation on home page
$TOC_NAV         =  1; # DEPRECATED: No longer used (breadcrumb navigation)
$ROOT_TOC_NAV    =  0; # DEPRECATED: No longer used (breadcrumb navigation)
$NAV_POSITION    =  1; # Site navigation position (top: 1, bottom: -1, none: 0)
$FOOTER_NAV      =  1; # Enable navigation controls in the page footer
$FOOTER_TOP_LINK =  1; # Show "Back to top" link in footer
$BREADCRUMB_SEPARATOR = " &gt; ";  # Separator between breadcrumb items
$CENTER_TITLE    =  0; # Force center page title
$AUTO_RULE       =  1; # Draw rule separators between dynamic components
$LIST_UL         =  1; # Bullet tables of contents and other dynamic lists
$SUB_LOGO        =  0; # Show site logo on subpage titles
$WRAP_SCRIPT_OUTPUT = 0; # Wrap executable script output in <pre> tags
                         # Scripts can override with "# WRAP" or "# NO WRAP"
                         # as a comment on line 2 (after shebang)
$CENTER_IMAGE_CAPTIONS = 1; # Center image captions (for nsi-res images)
# -----------------------------------------------------------------------------
# Display elements							display
# -----------------------------------------------------------------------------
$LINE_ELEMENTS        = 1;
$LINE_ELEMENT_DIVIDER = " | ";
$LINE_FRAME_L         = "[ ";
$LINE_FRAME_R         = " ]";
# -----------------------------------------------------------------------------
# Landing page preferences						landing	
# -----------------------------------------------------------------------------
$SYSTEM_STATUS = 1; # Show system status report referenced by $STATUS_COMMAND
$DEBUG_TRACE   = 0; # Show a debug trace below the footer, for developers
# -----------------------------------------------------------------------------
# Metadata                                                             metadata
# -----------------------------------------------------------------------------
$HTML_DOCTYPE = 'HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"';
$CLOUDFLARE   = 1; # Set to 1 if this system is proxied by Cloudflare
# -----------------------------------------------------------------------------
# Resource paths                                                      resources
# -----------------------------------------------------------------------------
$RESOURCE_DIRECTORY        = "res";
$STYLE_DIRECTORY           = "${RESOURCE_DIRECTORY}/style";
$IMAGE_DIRECTORY           = "${RESOURCE_DIRECTORY}/img";
$FULLSIZE_IMAGE_DIRECTORY  = "${IMAGE_DIRECTORY}/full";
$PREVIEW_DIRECTORY         = "${IMAGE_DIRECTORY}/previews";
$LEGACY_PREVIEW_DIRECTORY  = "${PREVIEW_DIRECTORY}/legacy";
# New semantic structure: legacy previews organized by use case
# Maintains backward compatibility - checks both locations
$LEGACY_PREVIEW_STANDARD_DIRECTORY = "${LEGACY_PREVIEW_DIRECTORY}/standard";
$COLLAGE_THUMBNAIL_DIRECTORY       = "${LEGACY_PREVIEW_DIRECTORY}/collage";
$MEDITATION_DIRECTORY      = "${IMAGE_DIRECTORY}/meditations";
$SITE_RESOURCE_DIRECTORY   = "/res";
$SITE_SYSRES_DIRECTORY     = "${SITE_RESOURCE_DIRECTORY}/sys";
$SITE_IMAGE_DIRECTORY      = "${SITE_RESOURCE_DIRECTORY}/img";
$SITE_STYLE_DIRECTORY      = "${SITE_RESOURCE_DIRECTORY}/style";
$SITE_MEDITATION_DIRECTORY = "${SITE_IMAGE_DIRECTORY}/meditations";
# -----------------------------------------------------------------------------
# HTML includes                                                        includes
# -----------------------------------------------------------------------------
$TITLE_FILE = ".title";
$INTRO_FILE = ".intro";
$BODY_FILE  = "body.html";  # Single body file
                            # body/ directory for multi-fragment content:
                            # - Fragments processed in alphabetical order
                            # - Executable files are run, output included
                            # - Non-executable files read as HTML fragments
                            # - If both body.html and body/ exist, body.html
                            #   content is rendered first, then fragments
$GROUP_FILE = ".group";
# -----------------------------------------------------------------------------
# System scripts                                                        scripts 
# -----------------------------------------------------------------------------
$STATUS_COMMAND = `/usr/shell/sitrep`;
# -----------------------------------------------------------------------------
# Table of contents configuration                                  contents,toc
# -----------------------------------------------------------------------------
$SHOW_TOC = 1;
$TREE_TOC = 1; # Generate TOC using the filesystem
$TOC_FILE = ".info";
$TOC_TITLE    = ""; # Optional heading displayed above table of contents
$TOC_SUBTITLE = ""; # Optional subtitle/description below TOC title
$APPEND_TOC_TO_BODY = 1; # Append TOC after body content (for pages with both)
# -----------------------------------------------------------------------------
# Resources                                                           resources
# -----------------------------------------------------------------------------
$FAVICON              = "${SITE_SYSRES_DIRECTORY}/favicon.ico";
$LOGO                 = "${SITE_SYSRES_DIRECTORY}/logo.gif";
$MAIN_STYLESHEET      = "${SITE_STYLE_DIRECTORY}/style.css"; 
$LEGACY_STYLESHEET    = "${SITE_STYLE_DIRECTORY}/legacy.css"; 
$MEDITATION_FILETYPES = ".gif|.jpg|.png";
$PREVIEW_WIDTH        = "1024";
$LEGACY_PREVIEW_WIDTH = "600";
$COLLAGE_THUMBNAIL_WIDTH = "300";  # Small thumbnails for collages on legacy browsers
$IMAGE_API_RECURSE    = 1; # API searches subdirectories recursively (1=yes, 0=no)
# -----------------------------------------------------------------------------
1 # Expression must be evaluated to pass load check
